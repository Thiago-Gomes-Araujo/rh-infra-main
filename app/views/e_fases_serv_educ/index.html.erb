<%= render "shared/context_nav", title: t("activerecord.models.#{EFaseServEduc.model_name.i18n_key}.other"), new_path: new_e_fase_serv_educ_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{EFaseServEduc.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :e_servico_educacional_nome_cont, class: "form-control", placeholder: t("activerecord.attributes.e_fase_serv_educ.e_subetapa") %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), e_fases_serv_educ_path, class: "btn btn-light" if params[:q] %>
    <% end %>
  </div>
  <div class="card-body">
    <%= render "shared/notice" %>
    <table class="table table-sm table-bordered table-striped">
      <thead>
        <tr>
          <th><%= sort_link(@q, :e_fase, t("activerecord.attributes.e_fase_serv_educ.e_subetapa")) %></th>
          <th><%= sort_link(@q, :e_servico_educacional, t("activerecord.attributes.e_fase_serv_educ.e_servico_educacional")) %></th>
          <th class="text-center">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @e_fases_serv_educ.each do |e_fase_serv_educ| %>
          <tr>
            <td><%= e_fase_serv_educ.e_fase %></td>
            <td><%= e_fase_serv_educ.e_servico_educacional %></td>
            <td class="text-center">
              <div class="dropdown">
                <a href="#" class="text-body dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="ph-gear"></i>
                </a>
                <div class="dropdown-menu" style="">
                  <div class="dropdown-header">Opções</div>
                  <%= link_to edit_e_fase_educ_path(e_fase_serv_educ), class: "dropdown-item" do %>
                    <i class="ph-pen me-2"></i> Editar
                  <% end %>
                  <%= form_for e_fase_serv_educ, method: :delete do |f| %>
                    <a class="dropdown-item hand-pointer " data-confirm-delete="<%= e_fase_serv_educ_path(e_fase_serv_educ) %>" data-csrf-token="<%= form_authenticity_token %>">
                      <i class="ph-trash-simple me-2"></i>Excluir
                    </a>
                  <% end %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= render "shared/pagy", pagy: @pagy %>
  </div>
</div>
