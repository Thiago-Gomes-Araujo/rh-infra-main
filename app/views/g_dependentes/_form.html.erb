<%= render "shared/context_nav", title: t("activerecord.models.#{GDependente.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{GPessoa.model_name.i18n_key}.other"), g_pessoas_path, class: "text-dark" %></span>
  <%= render "shared/breadcrumbs/g_pessoa" %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{GDependente.model_name.i18n_key}.other"), g_pessoa_g_treinamentos_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}")%></span>
<% end %>
<%= simple_form_for(@g_dependente, url: url) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @g_dependente.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{GDependente.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= render "shared/notice" %>
      <div class="row">
        <div class="col-12 col-xl-8">
          <%= f.input :nome, input_html: { class: "keyup"}  %>
        </div>
        <div class="col-12 col-xl-4">
          <%= f.input :data_nascimento, as: :string, input_html: { class: "keyup data", value: formatar_data(f&.object&.data_nascimento)}  %>
        </div>
        <div class="col-12 col-xl">
          <%= f.association :g_parentesco, input_html: { class: "select2"}  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", g_pessoa_g_dependentes_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>
