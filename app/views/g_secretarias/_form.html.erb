<%= render "shared/context_nav", title: t("activerecord.models.#{GSecretaria.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to  t("activerecord.models.#{GSecretaria.model_name.i18n_key}.other"), g_secretarias_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%=  t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@g_secretaria) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @g_secretaria.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{GSecretaria.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= render "shared/notice" %>
      <div class="row">
        <div class="col-12 col-lg-4">
          <%= f.input :sigla, input_html: { class: "keyup"}  %>
        </div>
        <div class="col-12 col-lg-8">
          <%= f.input :descricao, input_html: { class: "keyup"}  %>
        </div>
        <div class="col-12 col-lg-7">
          <%= f.input :nome_secretario, input_html: { class: "keyup"}  %>
        </div>
        <div class="col-12 col-lg-5">
          <%= f.input :cpf_secretario, input_html: { class: "keyup cpf"}  %>
        </div>
        <div class="col-12 col-lg-7">
          <%= f.input :nome_contador, input_html: { class: "keyup "}  %>
        </div>
        <div class="col-12 col-lg-5">
          <%= f.input :cpf_contador, input_html: { class: "keyup cpf"}  %>
        </div>
        <div class="col-12 col-lg-7">
          <%= f.input :nome_coordenador_patrimonio, input_html: { class: "keyup"}  %>
        </div>
        <div class="col-12 col-lg-5">
          <%= f.input :cpf_coordenador_patrimonio, input_html: { class: "keyup cpf"}  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", g_secretarias_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>
