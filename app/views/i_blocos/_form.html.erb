<%= render "shared/context_nav", title: t("activerecord.models.#{IBloco.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{IPredio.model_name.i18n_key}.other"), i_predios_path, class: "text-dark" %></span>
  <%= render "shared/breadcrumbs/i_predio" %>
  <span class="breadcrumb-item">
    <%= 
      link_to t("activerecord.models.#{IBloco.model_name.i18n_key}.other"),
      i_predio_i_blocos_path(@i_predio),
      class: "text-dark" 
    %>
  </span>
  <%= render "shared/breadcrumbs/i_bloco" unless @i_bloco.new_record? %>
  <span class="breadcrumb-item active">
    <%= t("helpers.submit.#{params[:action]}") %>
  </span>
<% end %>
<%= simple_form_for(@i_bloco, url: url) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @i_bloco.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{IBloco.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= render "shared/notice" %>
      <div class="row">
        <div class="col-12 col-lg-5">
          <%= f.association :i_andar, input_html: { class: "keyup select2"}  %>
        </div>
        <div class="col-12 col-lg-7">
          <%= f.input :descricao, input_html: { class: "keyup "}  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", i_predio_i_blocos_path(@i_predio), class: "btn btn-light" %>
    </div>
  </div>
<% end %>
