<%= render "shared/context_nav", title: t("activerecord.models.#{INivelAcordo.model_name.i18n_key}.other"), new_path: new_i_nivel_acordo_path do  %>
  <span class="breadcrumb-item active"><%= t("activerecord.models.#{INivelAcordo.model_name.i18n_key}.other") %></span>
<% end %>
<div class="card">
  <div class="card-header d-flex">
    <%= search_form_for @q, html: { class: "d-flex gap-2" , autocomplete: "off"} do |f| %>
      <%= f.search_field :descricao_cont, class: "form-control", placeholder: t("activerecord.attributes.i_nivel_acordo.descricao") %>
      <%= f.button(type: 'submit', class: 'btn btn-info') { tag.i(class: 'ph-magnifying-glass') } %>
      <%= link_to  tag.i(class: 'ph-x-circle'), i_niveis_acordo_path, class: "btn btn-light" if params[:q] %>
    <% end %>      
  </div>
  <div class="card-body">
    <%= render "shared/notice" %>
    <div class= "table-responsive">
      <table class="table table-sm table-bordered table-striped">        
        <thead>
          <tr>
            
              
                <th><%= sort_link(@q, :descricao, t("activerecord.attributes.i_nivel_acordo.descricao")) %></th>
              
              
              
              
            
            <th class="text-center">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @i_niveis_acordo.each do |i_nivel_acordo| %>
            <tr>
                
                  <td><%= i_nivel_acordo.descricao %></td>
                
                
                
                
              <td class="text-center">
                <div class="dropdown-toggle">
                  <a href="#" class="text-body dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ph-gear"></i>
                  </a>
                  <div class="dropdown-menu" style="">
                    <div class="dropdown-header">Opções</div>
                    <%= link_to edit_i_nivel_acordo_path(i_nivel_acordo), class: "dropdown-item" do %>
                      <i class="ph-pen me-2"></i> Editar
                    <% end %>
                    <%= form_for i_nivel_acordo, method: :delete do |f| %>
                      <a class="dropdown-item hand-pointer " data-confirm-delete="<%= i_nivel_acordo_path(i_nivel_acordo) %>" data-csrf-token="<%= form_authenticity_token %>">
                        <i class="ph-trash-simple me-2"></i>Excluir
                      </a>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer">
    <%= render "shared/pagy", pagy: @pagy %>
  </div>
</div>
