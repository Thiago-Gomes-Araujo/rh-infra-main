<div class="login-image">
  <div class="row justify-content-center mb-3 mt-5" style="padding-top: 70px;">
    <div class="col text-center">
      <img src="/layout/assets/img/rh.png" style="height: 90px">
    </div>
  </div>
  <div class="row justify-content-center mt-5" style="padding-top: 10px; padding-bottom: 50px;">
    <div class="col-xl-3 col-lg-5 col-md-6 col-sm-8">
      <div class="card border-0 shadow shadow-sm">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="card-body">
            <%= render "shared/notice"%>
            <%= f.input :cpf, required: false, autofocus: true, input_html: { class: "cpf-numeros"} %>
            <div class="form-control-feedback form-control-feedback-start">
              <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class: "password-field" } %>
              <div class="form-control-feedback-icon">
                <i class="toggle-password ph-eye mt-4" toggle=".password-field"></i>
              </div>
            </div>
            <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="card-footer">
            <%= f.button :submit, "Entrar", class: "btn btn-primary w-100 hand-pointer" %>
          <% end %>
        </div>
        <div class="text-center">
          <%= render "devise/shared/links" %>
          <br>
        </div>
        <br>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <img src="/layout/assets/img/logo-login.png" style="height: 90px">
    </div>
  </div>
</div>
<script>
  $('.toggle-password').click(function() {
    $(this).toggleClass('ph-eye ph-eye-slash');
    var input = $($(this).attr('toggle'));
    console.log('input',input);  // Adicione esta linha para depuração
    if (input.attr('type') == 'password') {
      input.attr('type', 'text');
    } else {
      input.attr('type', 'password');
    }
  });
</script>