<%= render "shared/context_nav", title: t("activerecord.models.#{IItemAcordo.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{IItemAcordo.model_name.i18n_key}.other"), i_itens_acordos_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@i_item_acordo) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @i_item_acordo.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{IItemAcordo.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= render "shared/notice" %>
      <div class="row">
        <div class="col-12 col-lg-8">
          <%= f.input :descricao, input_html: { class: "keyup "}  %>
        </div>
        <div class="col-12 col-lg-4">
          <%= f.input :quantidade, input_html: { class: "keyup "}  %>
        </div>
        <div class="col-12 col-lg-6">
          <%= f.association :i_acordo, input_html: { class: "keyup select2"}  %>
        </div>
        <div class="col-12 col-lg-6">
          <%= f.association :i_tipo_item_acordo, input_html: { class: "keyup select2"}  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", i_itens_acordos_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>
