<%= render "shared/context_nav", title: t("activerecord.models.#{GTipologiaCre.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{GTipologiaCre.model_name.i18n_key}.other"), g_tipologias_cres_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@g_tipologia_cre) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @g_tipologia_cre.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{GTipologiaCre.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= render "shared/notice" %>
      <div class="row">
        <div class="col-12 col-md-6">
          <%= f.input :descricao, input_html: { class: "keyup "}  %>
        </div>
        <div class="col-12 col-md-3">
          <%= f.input :minimo_escolas, input_html: { class: "keyup "}  %>
        </div>
        <div class="col-12 col-md-3">
          <%= f.input :maximo_escolas, input_html: { class: "keyup "}  %>
        </div>
        <div class="col-12 col-md-6">
          <%= f.input :numero_professores_analistas, input_html: { class: "keyup "}  %>
        </div>
        <div class="col-12 col-md-6">
          <%= f.input :numero_tecnicos, input_html: { class: "keyup "}  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", g_tipologias_cres_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>
