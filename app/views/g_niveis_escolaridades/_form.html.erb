<%= render "shared/context_nav", title: t("activerecord.models.#{GNivelEscolaridade.model_name.i18n_key}.other") do  %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{GPessoa.model_name.i18n_key}.other"), g_pessoas_path, class: "text-dark" %></span>
  <%= render "shared/breadcrumbs/g_pessoa" %>
  <span class="breadcrumb-item"><%= link_to t("activerecord.models.#{GNivelEscolaridade.model_name.i18n_key}.other"), g_pessoa_g_niveis_escolaridades_path, class: "text-dark" %></span>
  <span class="breadcrumb-item active"><%= t("helpers.submit.#{params[:action]}") %></span>
<% end %>
<%= simple_form_for(@g_nivel_escolaridade, url: url) do |f| %>
  <div class="card">
    <div class="card-header">
      <h5 class="my-0">
        <%= @g_nivel_escolaridade.new_record? ? "Incluir " : "Editar " %><%= t("activerecord.models.#{GNivelEscolaridade.model_name.i18n_key}.one") %>
      </h5>
    </div>
    <div class="card-body">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= render "shared/notice" %>
      <div class="row">
        <div class="col-12 col-xl-3">
          <%= f.association :g_tipo_nivel_escolaridade, input_html: { class: "select2"}  %>
        </div>
        <div class="col-12 col-xl-6">
          <%= f.association :g_instituicao, input_html: { class: "select2"}  %>
        </div>
        <div class="col-12">
          <%= f.association :g_curso, input_html: { class: "select2"}  %>
        </div>
        <div class="col-12 col-xl-4">
          <%= f.input :data_inicio, as: :string, input_html: { class: "keyup data", value: formatar_data(f&.object&.data_inicio)}  %>
        </div>
        <div class="col-12 col-xl-4">
          <%= f.input :data_fim, as: :string, input_html: { class: "keyup data", value: formatar_data(f&.object&.data_fim)}  %>
        </div>
        <div class="col-12 col-xl-4">
          <%= f.input :carga_horaria, as: :tel, input_html: { class: "numeros"}  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <%= btn_submit(f) %>
      <%= link_to "Voltar", g_pessoa_g_niveis_escolaridades_path, class: "btn btn-light" %>
    </div>
  </div>
<% end %>
