<div class="modal fade" id="modalsgis" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-large">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Relatório ICMS - Escolar</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="alert alert-info border border-0">Informe o ano e Município</p>
        <%= form_tag relatorios_sgis_escolar_path, method: :get, class: "d-flex gap-2", autocomplete: "off" do %>
          <div class="row">
            <div class="col-lg-12 col-xl-4">
              <label for="q_ano_eq" class="col-form-label">Ano:</label>
              <%= text_field_tag 'q[ano_eq]', params.dig(:q, :ano_eq), class: "form-control", placeholder: "Digite o ano" %>
            </div>
            <div class="col-lg-12 col-xl-8">
              <label for="q_g_municipio_id_eq" class="col-form-label">Município:</label>
              <%= select_tag 'q[g_municipio_id_eq]', options_for_select(GMunicipio.pluck(:descricao, :id), params.dig(:q, :g_municipio_id_eq)), { include_blank: true, class: "form-control select2" } %>
            </div>
            <div class="mt-4">
              <div class="col-lg-12 col-xl-12">
                <div class="modal-footer">
                  <%= button_tag(type: 'submit', class: 'btn btn-primary', target: '_blank') do %>
                    <i class="ph-file-pdf"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    $('#modalsgis').on('shown.bs.modal', function () {
      $('.select2').select2({
        placeholder: "Selecione uma opção",
        allowClear: true,
        width: '100%',
        dropdownParent: $('#modalsgis'),
      });
    });
  });
</script>
